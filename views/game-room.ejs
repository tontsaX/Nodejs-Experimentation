<head>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
  />
  <link rel="stylesheet" href="/css/game-of-ur-style.css" />
</head>

<%- include('the-royal-game-of-ur.ejs') %>

<div class="container">
  <div class="title">
    <h3 id="game-code" data-game-code="<%= game.passCode %>">
      Game <%= game.passCode %>
    </h3>
    <a href="/game-of-ur/logout">Logout</a>
  </div>

  <div class="card">
    <div class="card-header">
      <p id="player-name" data-player-name="<%= playername %>">
        <%= playername %>
      </p>
    </div>
  </div>

  <div class="message-box">
    <ul class="list-group list-group-flush" id="message-list"></ul>
    <div class="info"></div>
  </div>

  <div class="card-footer">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        id="message"
        placeholder="Send new message"
      />
      <div class="input-group-append">
        <button class="btn btn-success" type="button" id="message-btn">
          Send
        </button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.2/socket.io.js"></script>
<script src="/js/connect-to-gameroom.js"></script>
<script src="/js/game-of-ur-gameplay.js"></script>
<script src="/js/log-out-after-window-closed.js"></script>
